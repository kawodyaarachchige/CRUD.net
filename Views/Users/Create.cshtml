@model MyFirstApp.Models.UserModel
@{
ViewData["Title"] = "Add Customer";
}

<style>
   
    .custom-form {
        background-color: #fff5f8;
        padding: 30px;
        border-radius: 10px;
        max-width: 500px;
        margin: auto;
        border: 2px solid #ff77a9;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    /* Typography and Colors */
    h1 {
        color: #ff77a9; /* Soft pink color */
        text-align: center;
        margin-bottom: 20px;
    }

    label {
        color: #ff6384;
        font-weight: bold;
        font-family: 'Comic Sans MS', cursive;
    }

    /* Form Fields */
    .form-control {
        border-radius: 30px;
        border: 2px solid #ffb3c7; /* Soft pink border for input fields */
        padding: 12px;
        font-family: 'Arial', sans-serif;
        font-size: 1rem;
    }

    /* Button Styles */
    .btn-primary {
        background-color: #ff77a9;
        border: none;
        border-radius: 50px;
        padding: 10px 20px;
        font-family: 'Comic Sans MS', cursive;
        font-size: 1rem;
        margin-top: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s, background-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #ff5897;
        transform: translateY(-3px); /* Adds a subtle hover effect */
    }

    .btn-secondary {
        border-radius: 50px;
        padding: 10px 20px;
        background-color: #ffc3d6; /* Light pink for cancel button */
        color: white;
        font-family: 'Comic Sans MS', cursive;
        margin-left: 10px;
        border: none;
        transition: transform 0.3s;
    }

    .btn-secondary:hover {
        background-color: #ffb3c7;
        transform: translateY(-3px);
    }

    /* Icons */
    .form-icon {
        color: #ff5897;
        margin-right: 10px;
        font-size: 1.2rem; /* Cute-sized icons */
    }

    /* Validation */
    .text-danger {
        font-size: 0.9rem;
    }
    .bubble1, .bubble2, .bubble3 {
        position: absolute;
        border-radius: 50%;
        background-color: #ff77a9;
        opacity: 0.6;
        animation: float 4s ease-in-out infinite;
    }

    .bubble1 {
        width: 100px;
        height: 100px;
        bottom: 10%;
        left: 10%;
    }

    .bubble2 {
        width: 70px;
        height: 70px;
        bottom: 15%;
        left: 50%;
    }

    .bubble3 {
        width: 120px;
        height: 120px;
        bottom: 5%;
        left: 80%;
    }
</style>

<!-- Form Content -->
<h1>Add Customer</h1>

<form asp-action="Create" method="post" class="custom-form">
    <div class="form-group mb-3">
        <label asp-for="Name" class="control-label">
            <i class="fas fa-user form-icon"></i> Name
        </label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Email" class="control-label">
            <i class="fas fa-envelope form-icon"></i> Email
        </label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="Age" class="control-label">
            <i class="fas fa-birthday-cake form-icon"></i> Age
        </label>
        <input asp-for="Age" class="form-control" type="number" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-check form-icon"></i> Create
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-times form-icon"></i> Cancel
        </a>
    </div>
</form>

<div class="bubble1"></div>
<div class="bubble2"></div>
<div class="bubble3"></div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}