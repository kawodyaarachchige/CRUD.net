@model MyFirstApp.Models.UserModel
@{
ViewData["Title"] = "Add Customer";
Layout = "_Layout"; // Ensure this matches your layout file name
}

<!-- Page Content -->
<h1 class="text-center">Add Customer</h1>

<form asp-action="Create" method="post" class="custom-form">
    <div class="form-group mb-3">
        <label asp-for="Name" class="control-label">
            <i class="fas fa-user form-icon"></i> Name
        </label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Email" class="control-label">
            <i class="fas fa-envelope form-icon"></i> Email
        </label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="Age" class="control-label">
            <i class="fas fa-birthday-cake form-icon"></i> Age
        </label>
        <input asp-for="Age" class="form-control" type="number" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-check form-icon"></i> Create
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-times form-icon"></i> Cancel
        </a>
    </div>
</form>

<!-- Decorative Bubbles -->
<div class="bubble1"></div>
<div class="bubble2"></div>
<div class="bubble3"></div>

@section Scripts {
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
