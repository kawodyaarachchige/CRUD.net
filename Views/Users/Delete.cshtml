@model MyFirstApp.Models.UserModel
@{
    Layout = "_Layout"; 
}

<!-- Page Content -->
<h1 class="text-center mt-5 mb-2">Delete Customer</h1>

<p class="text-center mb-2 mt-2">Are you sure you want to delete this Customer?</p>

<div class="custom-form text-center">
    <h4>@Model.Name</h4>
    <p>@Model.Email</p>
    <p>@Model.Age</p>

    <form asp-action="Delete" method="post" class="mt-3">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-danger mr-2">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>

<!-- Decorative Bubbles -->
<div class="bubble1"></div>
<div class="bubble2"></div>
<div class="bubble3"></div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}