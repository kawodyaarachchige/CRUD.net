@model IEnumerable<MyFirstApp.Models.User>

<h1 class="mt-4">Users</h1>
<a href="@Url.Action("Create", "Users")" class="btn btn-primary mb-2">Create New User</a>

<table class="table table-bordered">
    <thead class="thead-light">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Age</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Name</td>
            <td>@user.Email</td>
            <td>@user.Age</td>
            <td>
                <a href="@Url.Action("Edit", "Users", new { id = user.Id })" class="btn btn-warning btn-sm">Edit</a>
                <a href="@Url.Action("Delete", "Users", new { id = user.Id })" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>