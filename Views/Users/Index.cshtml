@model IEnumerable<MyFirstApp.Models.UserModel>
@{
ViewData["Title"] = "Customers";
}
<h1 class="mt-4">Customers</h1>
<a href="@Url.Action("Create", "Users")"
   class="btn"
   style="display: inline-block; padding: 10px 20px; 
          background-color: #FFD700; /* Yellow color */
          color: #070707; /* Text color */
          border: none; 
          border-radius: 5px; /* Rounded corners */
          text-align: center; 
          text-decoration: none; 
          font-size: 16px; 
          transition: background-color 0.3s, transform 0.3s; /* Transition effect */
          box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Shadow effect */
          cursor: pointer;"
   onmouseover="this.style.backgroundColor='#FFC300'; this.style.transform='scale(1.05)';"
   onmouseout="this.style.backgroundColor='#FFD700'; this.style.transform='scale(1)';">
    Add New Customer</a>

<table class="table table-bordered mt-5">
    <thead class="thead-light">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Age</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Name</td>
            <td>@user.Email</td>
            <td>@user.Age</td>
            <td>
                <a href="@Url.Action("Edit", "Users", new { id = user.Id })" class="btn btn-warning btn-sm">Edit</a>
                <a href="@Url.Action("Delete", "Users", new { id = user.Id })" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>