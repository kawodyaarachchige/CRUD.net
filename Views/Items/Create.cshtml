@model MyFirstApp.Models.Item

@{
ViewData["Title"] = "Add Item";
Layout = "_Layout"; // Assuming you're using the _Layout for consistency
}

<h1 class="text-center mt-4">Add Item</h1>

<form asp-action="Create" method="post" class="custom-form mt-4">
    <div class="form-group mb-3">
        <label asp-for="Name" class="control-label">
            <i class="fas fa-tag" ></i> Item Name
        </label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Price" class="control-label">
            <i class="fas fa-dollar-sign"></i> Price
        </label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group mb-4">
        <label asp-for="Quantity" class="control-label">
            <i class="fas fa-box"></i> Quantity
        </label>
        <input asp-for="Quantity" class="form-control" type="number" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-check form-icon"></i>Create
        </button>
        <a asp-action="Index" class="btn btn-secondary ml-2">
            <i class="fas fa-times form-icon"></i>Cancel
        </a>
    </div>
</form>

<!-- Decorative Bubbles (Optional for Visual Consistency) -->
<div class="bubble1"></div>
<div class="bubble2"></div>
<div class="bubble3"></div>

@section Scripts {
@{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
