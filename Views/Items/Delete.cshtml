@model MyFirstApp.Models.Item
@{
    ViewData["Title"] = "Delete Item";
    Layout = "_Layout"; // Assuming you're using the _Layout for consistency
}

<h1 class="text-center mt-5 mb-2">Delete Item</h1>

<h4 class="text-center mb-2 mt-2" >Are you sure you want to delete this item?</h4>
<div class="custom-form p-4">
    <h5>@Model.Name</h5>
    <p>Price: @Model.Price</p>
    <p>Quantity: @Model.Quantity</p>
</div>

<form asp-action="Delete" method="post" class="mt-4">
    <input type="hidden" asp-for="Id" />
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
    </div>
</form>

<!-- Decorative Bubbles (Optional for Visual Consistency) -->
<div class="bubble1"></div>
<div class="bubble2"></div>
<div class="bubble3"></div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}