@model IEnumerable<MyFirstApp.Models.Item>

<h1 class="mt-4">Items</h1>
<a href="@Url.Action("Create", "Items")" class="btn btn-primary mb-2">Create New Item</a>

<table class="table table-bordered">
    <thead class="thead-light">
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>@item.Quantity</td>
            <td>
                <a href="@Url.Action("Edit", "Items", new { id = item.Id })" class="btn btn-warning btn-sm">Edit</a>
                <a href="@Url.Action("Delete", "Items", new { id = item.Id })" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>