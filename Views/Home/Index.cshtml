@model MyFirstApp.Models.DashboardViewModel
<style>
    * {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    body {
        font-family: 'Arial', sans-serif; 
        background-color: #f4f4f4;
        color: #333; 
    }
    .custom-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    .custom-card:hover {
        transform: scale(1.05);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
    }
    .btn-primary {
        border-radius: 20px; 
        transition: background-color 0.3s, transform 0.3s;
    }
    .btn-primary:hover {
        background-color: #007bff;
        transform: translateY(-2px); 
    }
</style>

<div class="container mt-4 position-relative" style="padding: 10px">
    <!-- Dashboard Cards -->
    <div class="row justify-content-center mb-4">
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card text-white bg-info custom-card shadow">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-2x mb-2"></i>
                    <h5 class="card-title">Customers Count</h5>
                    <p class="card-text display-4">@Model.CustomerCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card text-white bg-success custom-card shadow">
                <div class="card-body text-center">
                    <i class="fas fa-candy-cane fa-2x mb-2"></i>
                    <h5 class="card-title">Items Count</h5>
                    <p class="card-text display-4">@Model.ItemCount</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card text-white bg-warning custom-card shadow">
                <div class="card-body text-center">
                    <i class="fas fa-shopping-cart fa-2x mb-2"></i>
                    <h5 class="card-title">Orders Count</h5>
                    <p class="card-text display-4">@Model.OrderCount</p>
                </div>
            </div>
        </div>
    </div>
    <h2 class="text-center mb-4">Most Sold Items</h2>
    <div class="row justify-content-center">
        @for (int i = 1; i <= 3; i++)
        {
        <div class="col-md-4 mb-4">
            <div class="card shadow">
                <img src="~/images/choco.png" class="card-img-top" alt="Most Sold Item @i" style="height: 150px; object-fit: cover;">
                <div class="card-body text-center">
                    <h5 class="card-title">Item Name @i</h5>
                    <p class="card-text">Delicious chocolate treat.</p>
                    <a href="#" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
        }
    </div>
</div>
