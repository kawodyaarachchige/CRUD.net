@model IEnumerable<MyFirstApp.Models.OrderModel>

@{
    ViewData["Title"] = "Orders";
}

<h1 class="mt-4">Order Details</h1>
<a href="@Url.Action("Create","Orders")"
   class="btn"
   style="display: inline-block; padding: 10px 20px; 
          background-color: #FFD700; /* Yellow color */
          color: #070707; /* Text color */
          border: none; 
          border-radius: 5px; /* Rounded corners */
          text-align: center; 
          text-decoration: none; 
          font-size: 16px; 
          transition: background-color 0.3s, transform 0.3s; /* Transition effect */
          box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Shadow effect */
          cursor: pointer;"
   onmouseover="this.style.backgroundColor='#FFC300'; this.style.transform='scale(1.05)';"
   onmouseout="this.style.backgroundColor='#FFD700'; this.style.transform='scale(1)';">
   Place Order</a>

<table class="table table-striped mt-5">
    <thead>
    <tr>
        <th>Order ID</th>
        <th>Customer</th>
        <th>Order Date</th>
        <th>Total Amount</th>
        <th>Items</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.User.Name</td> <!-- Assuming User is a navigation property -->
            <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
            <td>@order.TotalAmount.ToString("C")</td>
            <td>
                <ul>
                    @foreach (var orderItem in order.OrderItems)
                    {
                        <li>
                            @orderItem.Item.Name - Quantity: @orderItem.Quantity, Price: @orderItem.Price.ToString("C")
                        </li>
                    }
                </ul>
            </td>
        </tr>
    }
    </tbody>
</table>