@model IEnumerable<MyFirstApp.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>

<table class="table">
    <thead>
    <tr>
        <th>Order ID</th>
        <th>Customer</th>
        <th>Order Date</th>
        <th>Total</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.OrderId</td>
            <td>@order.Customer.Name</td> <!-- Assuming Customer has a Name property -->
            <td>@order..ToShortDateString()</td>
            <td>@order.Total.ToString("C")</td> <!-- Formatting as currency -->
        </tr>
    }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Place New Order</a>