<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YumCorner</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .navbar-nav .nav-link {
            color: #FFFFFF;
            font-size: 18px;
            text-shadow: 2px 2px 8px rgba(255, 255, 255, 0.6);
            font-weight: bold;
            transition: color 0.3s ease, background-color 0.3s ease;
        }
        .navbar-nav .nav-link:hover {
            color: #FFD700;
            transition: font-size 0.3s ease;
            border-radius: 5px;
        }
        .navbar-nav .nav-item.active .nav-link {
            color: #FF69B4;
            text-decoration: underline;
            border-radius: 5px;
        }
        .navbar-nav {
            margin-left: auto;
        }

    </style>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light shadow-sm" style="background: linear-gradient(90deg, #FF69B4, #FFB6C1, #FFD700);padding: 10px">
    <a class="navbar-brand font-weight-bold" href="#" style="font-size: 28px; color: #FFFFFF; text-shadow: 2px 2px 10px rgba(255, 255, 255, 0.7);">YumCorner</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
            @if (User.Identity.IsAuthenticated) // Check if the user is logged in
            {
            <li class="nav-item active">
                <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Users")">Customers</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Items")">Items</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Index", "Orders")">Orders</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Logout", "Admin")">Logout</a>
            </li>
            }
            else
            {
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("Login", "Admin")">Login</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="@Url.Action("SignUp", "Admin")">Sign Up</a>
            </li>
            }
        </ul>
    </div>
</nav>

<div class="container">
    @RenderBody()
</div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
